# .env

# First source folder to backup (e.g., your main website directory)
SOURCE_FOLDER="/path/to/your/source"

# Second source folder to backup (e.g., another code folder for a related site)
SECOND_SOURCE_FOLDER="/path/to/your/second/source"

# Backup destination folder
BACKUP_FOLDER="/opt/backups"

# Flag to determine if DB should be backed up (true/false)
DB_BACKUP=false

# Flag to determine if second source should be backed up (true/false)
SECOND_SOURCE_BACKUP=false

# MySQL database details (if DB_BACKUP is true)
DB_NAME="your_database_name"
DB_USER="your_database_user"
DB_PASSWORD="your_database_password"
DB_HOST="localhost"

# Maximum backup folder size (in GB)
MAX_BACKUP_SIZE=50
